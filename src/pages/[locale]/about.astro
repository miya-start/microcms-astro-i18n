---
import { useTranslations } from 'library/i18n'
import AboutComponent from 'pages/about.astro'

import { langsArr, type Lang } from 'types/index'

export async function getStaticPaths() {
  return langsArr.map((lang) => ({
    params: {
      locale: lang,
    },
  }))
}

const { locale } = Astro.params as { locale: Lang }
const t = useTranslations(locale)
---

<AboutComponent t={t} />
